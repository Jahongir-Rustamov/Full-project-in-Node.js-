<div class="mx-auto w-75">
  <p class="fs-1">Edit Product-{{product.title}}</p>
  {{#if ProductEditError}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong>Error:</strong>
      {{ProductEditError}}
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  {{/if}}
  <form action="/Edit-product/{{product._id}}" method="post">
    <div class="form-floating mb-3">
      <input
        value="{{product.title}}"
        name="title"
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="title"
      />
      <label for="floatingInput">Title</label>
    </div>

    <div class="form-floating mb-3">
      <input
        value="{{product.image}}"
        name="image"
        type="text"
        class="form-control"
        id="floatingInput"
        placeholder="Image"
      />
      <label for="floatingInput">Image</label>
    </div>
    <div class="input-group mb-3">
      <span class="input-group-text bg-light">$</span>
      <div class="form-floating">
        <input
          value="{{product.price}}"
          name="price"
          type="text"
          class="form-control"
          id="floatingInputGroup1"
          placeholder="Price"
        />
        <label for="floatingInputGroup1">Price</label>
      </div>
    </div>
    <div class="form-floating mb-3">
      <textarea
        name="description"
        type="text"
        class="form-control"
        placeholder="Descriptions"
        id="floatingTextarea2"
        style="height: 100px"
      >{{product.description}}</textarea>
      <label for="floatingTextarea2">Descriptions</label>
    </div>
    <button type="submit" class="btn btn-secondary mt-3">Edit product</button>
  </form>
</div>